{
  "name": "steroid-guide-site",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "add-headers": "node scripts/add-file-headers.js",
    "screenshots": "tsx scripts/generate-screenshots.ts",
    "dev": "vite",
    "generate-sitemap": "tsx scripts/generate-sitemap.ts",
    "build": "npm run dev & sleep 5 && tsc -b && vite build && npm run generate-sitemap && npm run screenshots && pkill -f 'vite'",
    "lint": "eslint .",
    "preview": "vite preview",
    "lines": "tsx scripts/line-counter.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "lint:md": "markdownlint '**/*.md' --ignore node_modules",
    "check:links": "markdown-link-check '**/*.md' --ignore node_modules",
    "check:spelling": "cspell '**/*.md' --ignore-words=.cspell-words.txt",
    "test:code-examples": "markdown-code-example-tester '**/*.md'"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@heroicons/react": "^2.2.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@types/node": "^22.10.5",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "@vitest/ui": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "cspell": "^8.3.2",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "jsdom": "^26.0.0",
    "markdown-code-example-tester": "^1.0.0",
    "markdown-link-check": "^3.11.2",
    "markdownlint-cli": "^0.39.0",
    "postcss": "^8.4.49",
    "puppeteer": "^23.11.1",
    "react-markdown": "^9.0.3",
    "react-router-dom": "^7.1.1",
    "react-syntax-highlighter": "^15.6.1",
    "sitemap": "^8.0.0",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.19.2",
    "typescript": "~5.6.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  }
}
